{
  "experiment_name": "ViT_experiment",
  "model_type": "ViT",
  "dataset": {
    "train_data_dir": "./dataset5/training_56/df_train.pkl",
    "val_data_dir": "./dataset5/training_56/df_valid.pkl",
    "test_data_dir": "./dataset5/training_56/df_test.pkl",
    "images_root_dir": "./dataset5/formula_images/",
    "vocab_dir": "./dataset5/step2/",
    "img_h": 64,
    "img_w": 544,
    "batch_size": 32,
    "num_workers": 8
  },
  "experiment": {
    "num_epochs": 100,
    "patience": 5,
    "learning_rate": 5e-5
  },

  "scheduler": {
    "milestones": [40],
    "gamma": 0.5

  },

  "encoder": {
    "d_model": 256,
    "nhead": 4,
    "num_layers": 4,
    "dim_feedforward": 2048,
    "dropout": 0.3,
    "patch_size": 16,
    "activation": "gelu",
    "batch_first": true
  },

  "decoder": {
    "d_model": 256,
    "nhead": 4,
    "num_layers": 3,
    "dim_feedforward": 2048,
    "dropout": 0.3
  },

  "generation": {
    "max_length": 152
  }
}